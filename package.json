{
  "name": "split",
  "private": true,
  "type": "module",
  "scripts": {
    "type-check": "tsc --noEmit",
    "env:local-dev": "[ -f .env.development ] && cp .env.development .env.local || echo 'Skipping: .env.development not found'",
    "env:test": "[ -f .env.test ] && cp .env.test .env.local || echo 'Skipping: .env.test not found'",
    "dev": "pnpm run env:local-dev && vite dev --port 3000",
    "dev:test": "pnpm run env:test && CLOUDFLARE_ENV=test vite dev --port 3000",
    "build": "NODE_ENV=production vite build",
    "serve": "vite preview",
    "test": "pnpm run env:test && CLOUDFLARE_ENV=test vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:ci": "pnpm exec playwright install chromium && pnpm test:e2e",
    "lint": "eslint",
    "format": "prettier",
    "check": "prettier --write . && eslint --fix",
    "deploy": "npm run build && wrangler deploy",
    "deploy:staging": "npm run build && wrangler deploy --env staging --config wrangler.jsonc",
    "preview": "npm run build && vite preview --port 3000",
    "cf-typegen": "wrangler types",
    "db:generate": "pnpm dotenv -e .env.local drizzle-kit generate",
    "db:migrate": "pnpm dotenv -e .env.local -- drizzle-kit migrate",
    "db:migrate:prod": "pnpm dotenv -e .env.prod -- drizzle-kit migrate",
    "db:migrate:stag": "pnpm dotenv -e .env.staging -- drizzle-kit migrate",
    "db:migrate:test": "DATABASE_URL=postgres://colin:secure_password@localhost:5433/split_test?sslmode=disable drizzle-kit migrate"
  },
  "dependencies": {
    "@ai-sdk/google": "^2.0.49",
    "@cloudflare/vite-plugin": "^1.15.2",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/cloudflare": "^10.32.1",
    "@sentry/tanstackstart-react": "^10.32.1",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-query": "^5.90.7",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "ai": "^5.0.115",
    "better-auth": "^1.4.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.6",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.544.0",
    "postgres": "^3.4.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-qr-code": "^2.0.18",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/eslint-config": "^0.3.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "jsdom": "^27.0.0",
    "prettier": "^3.5.3",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0",
    "wrangler": "^4.50.0"
  }
}
